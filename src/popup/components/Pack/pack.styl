.packs-content
  padding 0
  list-style none
  display flex
  flex-flow wrap
  margin-bottom 20px
  margin-top 0
  justify-content space-between

.pack-item
  width 250px
  padding 20px 10px 10px 10px
  height 130px
  margin-top 15px
  position relative
  border-radius 10px
  transition background .4s ease-in
  &:hover
    .palette-color
      opacity 1
      visibility visible
  h3
    color #FFF
    font-size 16px
    margin 0
  &.color-1
    background-color color-1
    .input-description-package
      background color-1
      &:focus
        color color-1
    .input-title-package
      background color-1
      &:focus
        color color-1

  &.color-2
    background-color color-2
    .input-description-package
      background color-2
      &:focus
        color color-2
    .input-title-package
      background color-2
      &:focus
        color color-2

  &.color-3
    background-color color-3
    .input-description-package
      background color-3
      &:focus
        color color-3
    .input-title-package
      background color-3
      &:focus
        color color-3

  &.color-4
    background-color color-4
    .input-description-package
      background color-4
      &:focus
        color color-4
    .input-title-package
      background color-4
      &:focus
        color color-4

.pack-item--new
  text-align center
  border 2px dotted rgba(44,151,222,1)
  color gray-light
  padding 18px 9px 9px 9px
  .pack-item-content
    cursor pointer

.create-package--icon
  font-size 80px
  margin 30px 0 30px 0
  line-height 10px
  font-weight bold

.create-package--description
  margin 0
  font-size 17px
  font-weight bold

.pack-item--creating
  padding 0 10px
  .pack-item--title
    font-size 16px
    text-align left
    margin-bottom 6px
  .pack-item--input
    width 93%
    display block
    height 20px
    padding-left 10px
    outline none
  .new-pack--buttons
    display flex
    justify-content space-between
    margin-top 10px
    .btn-cancel, .btn-create
      padding 10px
      font-size 10px
      width 97px
    .btn-cancel
      background #e2e2e2
      color rgba(184, 189, 199, 1)
    .btn-create
      background rgba(178, 218, 118, 1)

.title-package--container
  margin-top -10px
  .input-title-package
    display block
    height 22px
    color #FFF
    font-size 22px
    font-weight bold
    &:focus
      color darken(color-1, 10%)
      background #FFF

.description-package--container
  height 48px
  .input-description-package
    display block
    font-weight 500
    font-size 12px
    color #FFF
    width 98%
    height 100%
    &:focus
      background #FFF


.more-package--content
  display block
  text-align center
  .more-package--button
    background transparent
    border 2px solid color-4
    color color-4
  &.more-package--hidden
    display none