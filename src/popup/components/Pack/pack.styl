.packs-content
  padding 0
  list-style none
  display flex
  justify-content space-between

.pack-item
  cursor pointer
  width 210px
  padding 20px 10px 10px 10px
  h3
    color #FFF
    font-size 16px
    margin 0
  &.color-1
    background-color #3c7ee0

.pack-item--new
  text-align center
  border 2px dotted rgba(44,151,222,1)
  padding-top 40px
  padding-bottom 40px
  color gray-light

.create-package--icon
  font-size 80px
  margin 0 0 30px 0
  line-height 10px

.create-package--description
  margin 0
  font-size 17px

.pack-description
  color #FFF
  margin 0
  font-weight 300