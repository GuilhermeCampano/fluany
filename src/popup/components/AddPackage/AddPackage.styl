.addPackage
  width 100px
  height 100px
  font-size 50px
  border none
  background #eee
  cursor pointer
  color #929292

.packageField
  background #ececec
  padding 5px 10px
  height 17px
  max-width 200px
  border none
  outline none
  &:hover, &:focus
    border 1px solid #aaa

.create-button
  border none
  padding 6px 20px
  margin-left 10px
  outline none
  cursor pointer
  background #ececec
  &:hover, &:focus
    border 1px solid #aaa