.Packages
  max-width 400px
  margin 0 auto
  margin-right 11px
  transition all .4s ease-out
  ul
    margin-top 0
    list-style none
    padding 0
    display flex
    justify-content space-between
    flex-wrap wrap
    li
      width 110px
      height 110px
      font-size 14px
      position relative
      border none
      background #3498db
      cursor pointer
      color #FFF
      text-shadow none
      position relative
      margin-top 30px
      margin-right 10px
      border-radius 5px
      &.package__color-1
        background #4CAF50
      &.package__color-2
        background #3498db
      &.package__color-3
        background #f44336
      &.package__color-4
        background #ff9800
      &.package__color-5
        background #9d60b8
      span.package__name
        position absolute
        top 50%;
        left 50%;
        transform translate(-50%, -50%)
      svg
        position absolute
        left 1px
        bottom 1px
        transition all .4s
        path
          fill #fff
          stroke #fff
      .top__ribbon
        position absolute
        right -5px
        top -5px
        z-index 1
        overflow hidden
        width 75px
        height 75px
        text-align right
        span
          font-size 13px
          font-weight bold
          color #fff
          text-transform uppercase
          text-align center
          line-height 20px
          transform rotate(45deg)
          width 100px
          display block
          background #f55d5d
          position absolute
          top 19px
          right -21px
          &:before
            content ""
            position absolute
            left 0
            top 100%
            z-index 1
            border-left 3px solid #f55d5d
            border-top 3px solid #f55d5d
          &:after
            content ""
            position absolute
            right 0
            top 100%
            z-index 1
            border-left 3px solid #f55d5d
            border-top 3px solid #f55d5d
.editingPackage
  transform translateX(-100%);
  position absolute

.editingPackage__container
  transform translateX(150%);
  text-align center
  position absolute
  right 0
  .editingPackage__title
    text-align center
    font-size 20px
    margin-top 55px
    text-transform uppercase
  &--edit
    position initial
    transition all .3s
    transform translateX(0)

  button.card__more-btn
    background transparent
    border none
    cursor pointer
    border-bottom 2px solid #2196F3
    font-size 25px
    color #2196F3
    outline none

  .card__save--toggle
    position absolute
    top -39px
    right 45px
    .card__save--label
      font-size 12px
      display block

.moveBack
  position absolute
  left 15px
  cursor pointer

.editingPackage__questions
  margin 0
  padding 0
  padding-top 3px
  list-style none
  .editingPackage__item
    background-color #f4f4f4
    margin-bottom 20px
    box-shadow 1px 1px 1px #d7d7d7
    padding-left 80px
    position relative
    &:hover
      .editingPackage__info:first-child
        display none
      .editingPackage__info
        left 28px
        svg
          display initial
  .editingPackage__info
    position absolute
    left 36px
    top calc(50% - 23px)
    font-size 25px
    svg
      display none
      cursor pointer
      path
        transition all .5s
        fill #898989
        stroke #898989
      &:hover
        path
          fill #FF5722
          stroke #FF5722
        

.question__field, .response__field
  padding 10px 16px 10px 2px
  transition all .4s
  border none
  background rgba(0, 0, 0, 0.003);
  box-shadow inset 0 -2px 1px rgba(0,0,0,0.03)
  outline none
  font-size 15px
  margin-top 10px
  line-height 1.4em
  margin-right 25px
  width 100%
  padding-left 10px
  &:focus
    padding 10px 16px 10px 2px

.colors__container
  position absolute
  top -52px
  height 64px
  left 12px
  text-align center
  ul
    padding 0
    list-style none
    display inline-block
    li
      float left
      margin-right 10px
      label
        width 20px
        height 20px
        display block
        border-radius 100%
        border 2px solid #fff
        cursor pointer
        transition all .4s
        &.colors__item-1
          background #00c86f
          &.active
            box-shadow 0px 0px 5px 5px #00c86f
        &.colors__item-2
          background #3498db
          &.active
            box-shadow 0px 0px 5px 5px #3498db
        &.colors__item-3
          background #f1634b
          &.active
            box-shadow 0px 0px 5px 5px #f1634b
        &.colors__item-4
          background #fdc14a
          &.active
            box-shadow 0px 0px 5px 5px #fdc14a
        &.colors__item-5
          background #9d60b8
          &.active
            box-shadow 0px 0px 5px 5px #9d60b8

.delete__package
  position absolute
  top -40px
  right 11px
  cursor pointer
  svg
    path
      fill #868686
      stroke #868686

.messageInfo
  background #ff7e7e
  font-size 15px
  padding 4px
  margin-bottom -9px
  text-shadow none
  color white
  width 95%


.package__search-container
  position relative
  &.active
    margin-bottom -6px
    .package__input-search
      visibility visible
      opacity 1
      transform translateX(0)
      padding 10px 16px 10px 2px
      border none
      background rgba(0,0,0,0.003)
      box-shadow inset 0 -2px 1px rgba(0,0,0,0.03)
      font-size 15px
      margin-top 10px
      line-height 1.4em
      margin-right 25px
      width 90%
      padding-left 10px

    .package__btn-search
      visibility hidden
      opacity 0
  .package__input-search
    opacity 0
    visibility hidden
    height 23px
    outline: 0
    padding-left 9px
    transition all .4s
    transform translateX(-400px)
    &:focus
      padding-left 2px
  .package__btn-search
    position absolute
    left -1px
    top 21px