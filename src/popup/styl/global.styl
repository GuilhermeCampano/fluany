body
	font-family "Calibri", sans-serif
	background #FFF
	margin 0
	padding 20px
	width 560px
.btn
	padding 10px 20px
	border none
	border-radius 4px
	color #FFF
	text-transform uppercase
	font-size 13px
	font-weight bold
	outline none
	cursor pointer

textarea
	border none
	transition background 85ms ease-in, border-color 85ms ease-in
	border-radius 2px
	word-wrap break-word
	overflow hidden
	outline none
	resize none
	width 97%
	font-family "Calibri", sans-serif