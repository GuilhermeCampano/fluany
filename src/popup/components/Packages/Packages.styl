.Packages
  max-width 400px
  margin 0 auto
  transition all .4s
  ul
    list-style none
    padding 0
    display flex
    justify-content space-around
    flex-wrap wrap
    li
      width 100px
      height 100px
      font-size 14px
      position relative
      border none
      background #3498db
      cursor pointer
      color #FFF
      text-shadow none
      position relative
      margin-top 30px
      margin-right 10px
      border-radius 5px
      span.package__name
        position absolute
        top 50%;
        left 50%;
        transform translate(-50%, -50%)
      svg
        position absolute
        right 1px
        transition all .4s
        path
          fill #fff
          stroke #fff

.editingPackage
  transform translateX(-100%);

.editingPackage__container
  transform translateX(150%);
  text-align center
  .editingPackage__title
    text-align center
    font-size 20px
  &--edit
    transition all .4s
    transform translateX(0)

  button.card__more-btn
    background transparent
    border none
    cursor pointer
    border-bottom 2px solid #2196F3
    font-size 25px
    color #2196F3
    outline none

  .card__save--toggle
    position absolute
    top 0px
    right 47px
    .card__save--label
      font-size 14px
      position absolute
      margin-left 6px
      top 2px
     

.editingPackage__questions
  margin 0
  padding 0
  list-style none
  .editingPackage__item
    background-color #f4f4f4
    margin-bottom 20px
    box-shadow 1px 1px 1px #d7d7d7
    padding-left 80px
    position relative
    &:hover
      .editingPackage__info:first-child
        display none
      .editingPackage__info
        left 28px
        svg
          display initial
  .editingPackage__info
    position absolute
    left 36px
    top calc(50% - 23px)
    font-size 25px
    svg
      display none
      cursor pointer
      path
        transition all .5s
        fill #898989
        stroke #898989
      &:hover
        path
          fill #FF5722
          stroke #FF5722
        

.question__field, .response__field
  padding 16px 16px 16px 2px
  transition all .4s
  border none
  background rgba(0, 0, 0, 0.003);
  box-shadow inset 0 -2px 1px rgba(0,0,0,0.03)
  outline none
  font-size 15px
  margin-top 10px
  line-height 1.4em
  margin-right 25px
  width 100%
  padding-left 10px
  &:focus
    padding 16px 16px 16px 2px